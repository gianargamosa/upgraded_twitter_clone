<%= render 'shared/error_messages', object: f.object %>

<%= f.label :avatar %>
<%= f.file_field :avatar %>
<% if f.object.avatar? %>
  <%= image_tag f.object.avatar.thumb.url %>
  <%= f.label :remove_avatar %>
  <%= f.check_box :remove_avatar %> 
<% end %>

<%= f.label :name %>
<%= f.text_field :name, class: 'form-control', :tabindex => 1%>

<%= f.label :email %>
<%= f.text_field :email, class: 'form-control', :tabindex=> 2 %>

<%= f.label :password %>
<%= f.password_field :password, class: 'form-control', :tabindex => 3%>

<%= f.label :password_confirmation, "Confirmation" %>
<%= f.password_field :password_confirmation, class: 'form-control', :tabindex => 4 %>